{% extends 'base/app.html.twig' %}
{% block title %}Edit Profile{% endblock %}
{% block body %}
	{# FORM WRAPPER #}
	<div class="col-12 col-lg-8 col-xl-6 mx-auto">
		{# FORM START #}
		{{ form_start(profileEditForm, {'attr':{'class':'bg-light rounded-1 shadow-3 my-5 mx-sm-4 mx-1 py-4 px-2 px-sm-4'}}) }}
		{# FORM START #}
		
		{# FORM HEADER #}
		<div class="form-row">
			<h1 class="text-center w-100">Edit Profile</h1>
		</div>
		{# FORM HEADER #}
		
		{# GENERAL ERRORS #}
		<div class="flash flash__error">
			{{ form_errors(profileEditForm) }}
		</div>
		{# GENERAL ERRORS #}
		
		{# USER NAME #}
		<div class="form-group py-1 px-md-1 p-lg-3">
			{% if profileEditForm._name.vars.errors is not empty and profileEditForm._name.vars.errors.length > 0 %}
				<div class="flash flash__danger">{{ form_errors(profileEditForm._name) }}</div>
			{% endif %}
			<div class="form-outline">
				{{ form_widget(profileEditForm._name, {'attr':{'class':'form-control custom__form-input'}}) }}
				{{ form_label(profileEditForm._name, null, {'label_attr':{'class':'form-label'}}) }}
			</div>
		</div>
		{# USER NAME #}
		
		{# FORM SUBMIT #}
		<div class="form-group py-1 px-md-1 p-lg-3 text-center">
			{{ form_widget(profileEditForm._save, {'attr':{'class':'btn btn-primary'}}) }}
		</div>
		{# FORM SUBMIT #}
		
		{# FORM END #}
		{{ form_rest(profileEditForm) }}
		{{ form_end(profileEditForm) }}
		{# FORM END #}
	</div>
	{# FORM WRAPPER #}
{% endblock %}