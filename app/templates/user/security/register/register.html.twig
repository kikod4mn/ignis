{% extends 'base/app.html.twig' %}
{% block title %}Register for a new account{% endblock %}
{% block body %}
	<div class="col-12 col-lg-8 col-xl-6 mx-auto">
		<form action="{{ path('account-register') }}" method="POST" class="bg-light rounded-1 shadow-3 my-5 mx-sm-4 mx-1 py-4 px-2 px-sm-4">
			<h1 class="text-center">Register for IGNIS</h1>
			<input type="hidden" name="register[_token]" value="{{ csrf_token('_register[_csrf_token]') }}">
			<div class="form-group p-1 p-lg-3">
				<div class="form-outline">
					<input class="form-control form-control-lg custom__form-input" id="register-name" type="text" name="register[_name]" required
					       value="{{ form.get('_name').getData }}">
					<label class="form-label" for="register-name">Full Name</label>
				</div>
			</div>
			<div class="form-group p-1 p-lg-3">
				<div class="form-outline">
					<input class="form-control form-control-lg custom__form-input" id="register-email" type="email" name="register[_email]" required
					       value="{{ form.get('_email').getData }}">
					<label class="form-label" for="register-email">Email Address</label>
				</div>
				<span class="email__availability p-3 pb-1 text__success invisible"></span>
			</div>
			<div class="form-group p-1 p-lg-3">
				<div class="form-outline">
					<i class="toggle__password-icon icon-lock trailing"></i>
					<input class="form-control form-control-lg custom__form-input" id="register-password" type="password"
					       name="register[_plainPassword]" required>
					<label class="form-label" for="register-password">Password</label>
				</div>
			</div>
			<div class="form-group p-1 p-lg-3 d-flex flex-row">
				<span class="validation__bar validation__bar-1"></span>
				<span class="validation__bar validation__bar-2"></span>
				<span class="validation__bar validation__bar-3"></span>
				<span class="validation__bar validation__bar-4"></span>
			</div>
			<div class="form-group p-1 p-lg-3">
				<ul class="list-unstyled validations-list">
					<li><i class="validation__1-icon icon-exclamation"></i> must be at least 12 characters</li>
					<li><i class="validation__2-icon icon-exclamation"></i> must contain at least one capital letter</li>
					<li><i class="validation__3-icon icon-exclamation"></i> must contain minimum of one number</li>
					<li><i class="validation__4-icon icon-exclamation"></i> must contain at least one symbol $&+,:;=?@#</li>
				</ul>
			</div>
			<div class="form-group pt-1 px-1 px-lg-3">
				<div class="form-check">
					<input class="form-check-input" id="register-agree-to-terms" type="checkbox" name="register[_agreeToTerms]">
					<label class="form-check-label" for="register-agree-to-terms">I agree to kikopolis.tech and ignis.ee terms and conditions</label>
				</div>
			</div>
			<div class="form-group pb-1 px-1 px-lg-3 text-center">
				<a class="" href="{{ path('terms-and-conditions') }}">Read terms and conditions</a>
			</div>
			<div class="form-group p-1 p-lg-3 text-center">
				<input id="submit-form-button" class="btn btn-primary" type="submit" disabled value="Register">
			</div>
		</form>
	</div>
	<div id="email-check-path-data" data-url="{{ path('account-register-check-email') }}"></div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('register-validations') }}
{% endblock %}