<div class="m-0 pb-3 pt-4 text__light bg__info-accent">
	<h5 class="text-center text-uppercase">
		<a class="text-decoration-none text__light link-light" href="{{ path('language-show', {'language_uuid':language.uuid}) }}">{{ language.name }}</a>
	</h5>
</div>
<div class="row mx-auto p-2 pb-0 m-0 border-3 shadow-3">
	<div class="col-8 p-2">
		<p class="small p-0 m-0">
			<a href="{{ path('language-show', {'language_uuid':language.uuid}) }}">
				UUID - {{ language.uuid }}
			</a>
		</p>
	</div>
	<hr class="mt-2 mb-1 p-0 m-0">
	<div class="col-12 p-2">
		<p class="p-0 m-0">
			{{ language.description|length > 150 ? language.description|slice(0, 150) ~ '...' : language.description }}
		</p>
		<p class="p-0 m-0">
			{{ language.projects.count }} projects use this language.
		</p>
	</div>
</div>