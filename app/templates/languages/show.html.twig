{% extends 'base/app.html.twig' %}
{% block title %}{{ language.name }}{% endblock %}
{% block body %}
	<div class="container mb-5 pb-3 px-0 mx-auto">
		<div class="mt-5 pb-3 pt-4 bg__dark text__light">
			<h1 class="text-center text-uppercase">{{ language.name }}</h1>
			<p class="text-center small p-0 m-0">UUID - {{ language.uuid }}</p>
		</div>
		{% if is_granted('ROLE_ADD_LANGUAGE') and is_granted('ROLE_EDIT_LANGUAGE') %}
			<div class="col-12 m-0 p-0">
				{{ include('languages/language-parts/_admin-actions.html.twig') }}
			</div>
		{% endif %}
		{{ include('languages/language-parts/_general-public-full.html.twig') }}
		
		{{ include('languages/language-parts/_projects.html.twig') }}
	</div>
{% endblock %}

