<div class="card col-12 col-md-6 col-lg-4 my-1 mx-0 p-1">
	<div class="card-body">
		<h5 class="card-title">{{ feature.title }}</h5>
		<p class="card-text">{{ feature.description }}</p>
		{% if feature.author.id is same as app.user.id or app.user.hasRole('ROLE_ADMIN') %}
			<a href="{{ path('feature-edit', {'project_uuid':feature.project.uuid, 'feature_uuid':feature.uuid}) }}" class="card-link">Edit</a>
		{% endif %}
	</div>
</div>