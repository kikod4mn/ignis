<div class="m-0 pb-3 pt-4 text__light bg__info-accent">
	<h5 class="text-center text-uppercase">
		<a class="text-decoration-none text__light link-light" href="{{ path('project-show', {'project_uuid':project.uuid}) }}">{{ project.name }}</a>
	</h5>
</div>
<div class="row mx-auto p-2 pb-0 m-0 border-3 shadow-3">
	<div class="col-4 p-2">
		<a href="{{ path('project-show', {'project_uuid':project.uuid}) }}">
			<img height="150px" width="150px" src="{{ asset(project.displayCoverImage) }}" alt="{{ project.name }}'s cover image"
			     class="img-fluid rounded-1">
		</a>
	</div>
	<div class="col-8 p-2">
		<h6 class="text-uppercase p-0 m-0">Created by: {{ project.author.name }}</h6>
		<p class="small p-0 m-0">
			<a href="{{ path('project-show', {'project_uuid':project.uuid}) }}">
				UUID - {{ project.uuid }}
			</a>
		</p>
	</div>
	<hr class="mt-2 mb-1 p-0 m-0">
	<div class="col-12 p-2">
		<h6 class="text-uppercase p-0 m-0 text__dark-accent">Description</h6>
		<p class="p-0 m-0">
			{{ project.description|length > 150 ? project.description|slice(0, 150) ~ '...' : project.description }}
		</p>
	</div>
	<hr class="mt-2 mb-1 p-0 m-0">
	<div class="col-12 p-2">
		<h6 class="text-uppercase p-0 m-0 text__dark-accent">Summary</h6>
		<p class="p-0 m-0">{{ project.features.count }} features added, {{ project.bugs.count }} bugs tracked.</p>
		<p class="p-0 m-0">{{ project.canEdit.count }} contributors on the project.</p>
		<p class="p-0 m-0">
			Project was created on {{ project.createdAt|date('l jS \\o\\f F Y H:i') }}.
			{% if project.updatedAt is not null %}
				<span> and edited last on {{ project.updatedAt|date('l jS \\o\\f F Y H:i') }}.</span>
			{% endif %}
		</p>
	</div>
</div>