<div class="row mx-auto p-2 pb-0 m-0 border-3 shadow-3">
	<div class="col-12 p-2">
		<img src="{{ asset(project.displayCoverImage) }}" alt="{{ project.name }}'s cover image"
		     class="img-fluid d-block mx-auto rounded-1 shadow-2">
	</div>
	<hr class="mt-2 mb-1 p-0 m-0">
	<div class="col-12 p-2">
		<h6 class="text-uppercase p-0 m-0 text__dark-accent">Description</h6>
		<p class="p-0 m-0">
			{{ project.description }}
		</p>
	</div>
	<hr class="mt-2 mb-1 p-0 m-0">
	<div class="col-12 p-2">
		<h6 class="text-uppercase p-0 m-0 text__dark-accent">Summary</h6>
		<p class="p-0 m-0">{{ project.features.count }} features added, {{ project.bugs.count }} bugs tracked.</p>
		<p class="p-0 m-0">{{ project.canEdit.count }} contributors on the project.</p>
		<p class="p-0 m-0">
			Project was created on {{ project.createdAt|date('l jS \\o\\f F Y H:i') }}.
			{% if project.updatedAt is not null %}
				<span> and edited last on {{ project.updatedAt|date('l jS \\o\\f F Y H:i') }}.</span>
			{% endif %}
		</p>
	</div>
</div>