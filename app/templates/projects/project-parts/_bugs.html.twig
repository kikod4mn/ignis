<div class="m-0 pb-3 pt-4 text__light bg__warning-accent">
	<h5 class="text-center text-uppercase">Bugs</h5>
</div>
<div class="row mx-auto p-2 pb-0 m-0 border-3 shadow-3">
	<div class="row m-0 p-0">
		<div class="text-center col-12 m-0 p-0">
			<a class="btn btn-outline-dark" href="{{ path('project-show-bugs', {'project_uuid':project.uuid, 'page':1}) }}">All Bugs</a>
			{% if is_granted('ROLE_ADD_BUG') %}
				<a href="{{ path('bug-create', {'project_uuid':project.uuid}) }}" class="btn btn-outline-primary">Add Bug</a>
			{% endif %}
		</div>
	</div>
	{% for bug in project.bugs %}
		{{ include('bugs/cards/_small-bug-card-project-show.html.twig') }}
	{% endfor %}
</div>